                    <h1>Event History</h1>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container -->
</div>
<!-- /.intro-header -->

<!-- Accounts navigation bar -->
@Html.Partial("_AccountsNavBarPartial")
<!-- /accounts navigation bar -->

<div class="container">
    <!--
